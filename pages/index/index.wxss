/**index.wxss**/
@import "../../lib/font/iconfont.wxss";
.wrap{
  width: 100%;
  height: 100%;
  background-color: #81AEF9;
  background-image: linear-gradient(270deg,#81AEF9 0%,#F9DEF1 100%);
  background-image: -webkit-linear-gradient(270deg,#81AEF9 0%,#F9DEF1 100%);
  background-image: -moz-linear-gradient(270deg,#81AEF9 0%,#F9DEF1 100%);
  background-image: -o-linear-gradient(270deg,#81AEF9 0%,#F9DEF1 100%);
  overflow: hidden;
}
.tool-wrap{
  width: 500rpx;
  height: 800rpx;
  position: relative;
  transform: translate3d(0,350rpx,0);
  border-radius: 16rpx;
  background-color: #FFDEE9;
  background-image: linear-gradient(90deg,#FFDEE9 0%,#B5FFFC 100%);
  background-image: -webkit-linear-gradient(90deg,#FFDEE9 0%,#B5FFFC 100%);
  background-image: -moz-linear-gradient(90deg,#FFDEE9 0%,#B5FFFC 100%);
  background-image: -o-linear-gradient(90deg,#FFDEE9 0%,#B5FFFC 100%);
  margin: 0 auto;
  transition: all 0.4s ease;
  -moz-box-shadow:0px 3px 9px #969696; -webkit-box-shadow:0px 3px 9px #969696; box-shadow:0px 3px 9px #969696;
}
.tool-wrap.active{
  height: 100rpx;
  transform: translate3d(0,150rpx,0);

}
#tool-voice,#tool-camera{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 150rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items:center;
  transition: all 0.4s ease;
  -moz-box-shadow:0px 3px 9px #969696; -webkit-box-shadow:0px 3px 9px #969696; box-shadow:0px 3px 9px #969696;
}
#tool-voice.active,#tool-camera.active{
  width: 80rpx;
  height: 80rpx;
  top: 10rpx;
}
#tool-voice{
  top: 450rpx;
  background-color: #8EC5FC;
  background-image: linear-gradient(62deg,#8EC5FC 0%,#E0C3FC 100%);
  background-image: -webkit-linear-gradient(62deg,#8EC5FC 0%,#E0C3FC 100%);
  background-image: -moz-linear-gradient(62deg,#8EC5FC 0%,#E0C3FC 100%);
  background-image: -o-linear-gradient(62deg,#8EC5FC 0%,#E0C3FC 100%);
}
#tool-voice.active{
  left: 100rpx;
}
#tool-camera{
  top: 150rpx;
  background-color: #21D4FD;
  background-image: linear-gradient(30deg,#21D4FD 0%,#B721FF 100%);
  background-image: -webkit-linear-gradient(30deg,#21D4FD 0%,#B721FF 100%);
  background-image: -moz-linear-gradient(30deg,#21D4FD 0%,#B721FF 100%);
  background-image: -o-linear-gradient(30deg,#21D4FD 0%,#B721FF 100%);
}
#tool-camera.active{
  left: 320rpx;
}
#tool-voice>icon{
  font-size: 70rpx;
  transition: all 0.4s ease;
}
#tool-voice.active>icon{
  font-size: 30rpx;
}
#tool-camera>icon{
  font-size: 56rpx;
  transition: all 0.4s ease;
}
#tool-camera.active>icon{
  font-size: 30rpx;
}
.tool-switch{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -30rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  background-color: #FFDEE9;
  -moz-box-shadow:0px 3px 9px #969696; -webkit-box-shadow:0px 3px 9px #969696; box-shadow:0px 3px 9px #969696;
}
.tool-switch>icon{
  position: absolute;
  background-color: #000;
  transition: all 0.8s ease-in-out;
}
.tool-switch>icon:nth-child(1),.tool-switch>icon:nth-child(2){
  top: 0;
  bottom: 0;
  margin: auto 0;
  width: 16rpx;
  height: 2rpx;
}
.tool-switch>icon:nth-child(1){
  left: 10rpx;
}
.tool-switch>icon:nth-child(2){
  right: 10rpx;
}
.tool-switch.active>icon:nth-child(1){
  left: 17rpx;
}
.tool-switch.active>icon:nth-child(2){
  right: 17rpx;
}
.tool-switch>icon:nth-child(3),.tool-switch>icon:nth-child(4){
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 2rpx;
  height: 16rpx;
}
.tool-switch>icon:nth-child(3){
  top: 10rpx;
}
.tool-switch>icon:nth-child(4){
  bottom: 10rpx;
}
.tool-switch.active>icon:nth-child(3){
  top: 17rpx;
}
.tool-switch.active>icon:nth-child(4){
  bottom: 17rpx;
}
.tool-switch>icon:nth-child(5){
  border-radius: 50%;
  width: 12rpx;
  height: 12rpx;
  border: 1rpx solid #000;
  background-color: transparent;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
}
.tool-switch.active>icon:nth-child(5){
  width: 100%;
  height: 100%;
  border-color: transparent;
}